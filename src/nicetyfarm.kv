#:kivy 1.9
<FloatLayout>:
    canvas.before:
        Color:
            rgba: 0.15, 0.57, 0.14, 1
        Rectangle:
            pos: self.pos
            size: self.size

    background_color: 0.3, 0.8, 0, 1
    Label:
        text: "Welcome To Nicetyfarm"
        pos_hint: {"top":1.4}

    Image:
        pos_hint: {"top":1.05, "x":0.35}
        size_hint: 0.3, 0.6
        source: "nicetyfarm.png"

    Button:
        text:"Login with facebook"
        color: 1, 1, 1 ,1
        size_hint: 0.7, 0.08
        pos_hint: {"top":0.6, "x":0.15}
        background_color: 0, 0, 0, 1

    Label:
        text:"Email:"
        pos_hint: {"top":0.98, "x":-0.30}

    TextInput:
        # text: "Name"
        hint: "Name"
        multiline: False
        size_hint: 0.7, 0.08
        pos_hint: {"top":0.45, "x":0.15}
        id: "name"

    Label:
        text:"Password:"
        pos_hint: {"top":0.83, "x":-0.27}
    
    TextInput:
        multiline: False
        size_hint: 0.7, 0.08
        pos_hint: {"top":0.3, "x":0.15}
        id: "phone"

    Button:
        text:"Login"
        color: 1, 1, 1 ,1
        size_hint: 0.7, 0.08
        pos_hint: {"top":0.17, "x":0.15}
        background_color: 0, 0, 0, 1

    Label:
        text:"Have no account? REGISTER"
        pos_hint: {"top":0.55}
        color: 0.93, 0.83, 0.1, 1